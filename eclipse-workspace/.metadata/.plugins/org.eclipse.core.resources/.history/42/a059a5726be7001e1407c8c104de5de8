package principal;

public class ContarVocales {

	public static void main(String[] args) {
		String cad = "Esto es un nuevo texto";
		//char letra;
		int contador= 0;
		cad = cad.toLowerCase();
		for(int i = 0; i < cad.length();i++) {
			
			switch (cad.charAt(i)) {
			case 'a':
				System.out.println(cad.charAt(i));
				contador++;
				break;
			case 'e':
				System.out.println(cad.charAt(i));
				contador++;
				break;
			case 'i':
				System.out.println(cad.charAt(i));
				contador++;
				break;
			case 'o':
				System.out.println(cad.charAt(i));
				contador++;
				break;
			case 'u':
				System.out.println(cad.charAt(i));
				contador++;
				break;
			}
			
			
		}
		System.out.println("Hay " + contador + " vocales");

	}

}
