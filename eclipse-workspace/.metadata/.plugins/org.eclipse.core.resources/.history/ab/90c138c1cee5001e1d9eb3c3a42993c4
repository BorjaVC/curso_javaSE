package principal;

public class Comprobar {

	public static void main(String[] args) {
		int num = 4;//Simula n√∫mero introducido desde fuera
		
		if(num%2 == 0) {
		
		System.out.println(num / 2);

	}else {
		System.out.println(--num /2 );
	}
		
	//Operador ternario
		System.out.println(num%2 == 0 ? num / 2 : (num - 1 / 2));
}

}
